{
  "type": "module",
  "web-types": [
    "./node_modules/mdui/web-types.zh-cn.json"
  ],
  "dependencies": {
    "@fancyapps/ui": "^5.0.35",
    "@mdui/icons": "^1.0.2",
    "@types/node": "^20.11.28",
    "@types/nprogress": "^0.2.3",
    "@types/prismjs": "^1.26.3",
    "@unocss/core": "^0.58.6",
    "@unocss/eslint-config": "^0.58.7",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "fast-glob": "^3.3.2",
    "husky": "^9.0.11",
    "mdui": "^2.0.6",
    "nprogress": "^0.2.0",
    "pjax": "^0.2.8",
    "prettier": "^3.2.5",
    "prismjs": "^1.29.0",
    "stylelint": "^16.3.1",
    "stylelint-config-standard": "^36.0.0",
    "typescript": "^5.4.2",
    "typescript-eslint": "^7.4.0",
    "unocss": "^0.58.6",
    "vite": "^5.1.6"
  },
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "vite build",
		"prepare": "husky install",
    "type-check": "tsc --noEmit",
    "lint": "eslint --max-warnings 0 . && stylelint --max-warnings 0 **/*.css",
    "lint:fix": "eslint --max-warnings 0 --fix . && stylelint --max-warnings 0 --fix **/*.css && prettier --write -u --log-level silent ."
  },
	"lint-staged": {
		"*.{cjs,js,ts}": [
			"eslint --fix --max-warnings 0"
		],
		"*.{json,md,yml,yaml}": [
			"prettier --ignore-unknown --write"
		],
		"*.css": [
			"stylelint --fix --max-warnings 0",
			"prettier --ignore-unknown --write"
		]
	}
}
